<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4d000000"
    tools:context=".Activity.Main_Home_Contents_Setting_Activity">

    <View
        android:id="@+id/home_setting_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/home_setting_container"></View>
    <RelativeLayout
        android:id="@+id/home_setting_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/img_morebox_round"
        android:paddingBottom="31dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_contents_upside_fixing"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginTop="34dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="19dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_clip_mini" />

            <TextView
                android:id="@+id/tv_home_contents_top_fix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:includeFontPadding="false"
                android:lineSpacingExtra="7sp"
                android:text="상단고정"
                android:textColor="#191919"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_contents_scrab"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_below="@+id/ll_contents_upside_fixing"
            android:layout_marginTop="22dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="19dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_scrap_mini" />

            <TextView
                android:id="@+id/tv_home_contents_scrab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:includeFontPadding="false"
                android:lineSpacingExtra="7sp"
                android:text="스크랩"
                android:textColor="#191919"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_contents_read_indication"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_below="@+id/ll_contents_scrab"
            android:layout_marginTop="22dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="19dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_read_mini" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ll_contents_read_indication"
                android:layout_marginLeft="24dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:includeFontPadding="false"
                android:lineSpacingExtra="7sp"
                android:text="읽음 표시"
                android:textColor="#191919"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_contents_category_modify"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_below="@+id/ll_contents_read_indication"
            android:layout_marginTop="22dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="19dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_category_mini" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ll_contents_read_indication"
                android:layout_marginLeft="24dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:includeFontPadding="false"
                android:lineSpacingExtra="7sp"
                android:text="카테고리 수정"
                android:textColor="#191919"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_contents_delete"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_below="@+id/ll_contents_category_modify"
            android:layout_marginTop="22dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="19dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_trash_mini" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ll_contents_read_indication"
                android:layout_marginLeft="24dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:includeFontPadding="false"
                android:lineSpacingExtra="7sp"
                android:text="삭제"
                android:textColor="#191919"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_contents_share"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_below="@+id/ll_contents_delete"
            android:layout_marginTop="22dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="19dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_share_mini" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ll_contents_read_indication"
                android:layout_marginLeft="24dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:includeFontPadding="false"
                android:lineSpacingExtra="7sp"
                android:text="공유"
                android:textColor="#191919"
                android:textSize="15sp" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>