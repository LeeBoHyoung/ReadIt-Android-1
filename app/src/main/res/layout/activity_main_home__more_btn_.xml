<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4d000000"
    tools:context=".Activity.MainHome_More_btn_Activity">

    <View
        android:id="@+id/home_more_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/home_more_container" />
    <RelativeLayout
        android:id="@+id/home_more_container"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/img_morebox_round"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_newly_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_home_more_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:includeFontPadding="false"
                android:lineSpacingExtra="7sp"
                android:text="최신순"
                android:textColor="#ff4106"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_donot_read_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_newly_order"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_home_more_unread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:includeFontPadding="false"
                android:lineSpacingExtra="7sp"
                android:text="오래된 순"
                android:textColor="#191919"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_old_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_donot_read_order"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_home_more_older"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:includeFontPadding="false"
                android:lineSpacingExtra="7sp"
                android:text="안읽은 순"
                android:textColor="#191919"
                android:textSize="15sp" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>