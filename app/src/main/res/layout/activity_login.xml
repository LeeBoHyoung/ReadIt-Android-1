<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Activity.LoginActivity">

    <ImageView
        android:id="@+id/iv_login_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_back" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_login_back_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/img_splash_logo" />
    <LinearLayout
        style="@style/Widget.AppCompat.ButtonBar"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:id="@+id/container_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="52dp">

            <EditText
                android:fontFamily="@font/notosanscjkkr_regular"
                android:includeFontPadding="false"
                android:inputType="text"
                android:id="@+id/edt_login_id"
                android:layout_width="306.5dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:hint="example@readit.com"
                android:paddingRight="20dp"
                android:paddingBottom="11.5dp"
                android:textColor="#707070"
                android:singleLine="true"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_circleID"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/img_circle_orange" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7.5dp"
                    android:text="이메일"
                    android:textColor="#707070"
                    android:textSize="14sp" />
            </LinearLayout>


        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="31dp">

            <EditText

                android:fontFamily="@font/notosanscjkkr_regular"
                android:includeFontPadding="false"
                android:id="@+id/edt_login_pw"
                android:layout_width="306.5dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:hint="영어, 숫자 조합 8-12자리"
                android:inputType="textPassword"
                android:paddingRight="20dp"
                android:paddingBottom="11.5dp"
                android:textColor="#707070"
                android:singleLine="true"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_circlePW"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/img_circle_orange" />

                <TextView
                    android:fontFamily="@font/notosanscjkkr_regular"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7.5dp"
                    android:text="비밀번호"
                    android:textColor="#707070"
                    android:textSize="14sp" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp">

            <ImageView
                android:id="@+id/btn_submitLogin"
                android:layout_width="315dp"
                android:layout_height="42dp"
                android:src="@drawable/btn_login_gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:text="로그인"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_right" />

            </LinearLayout>


        </FrameLayout>

        <TextView
            android:layout_width="184dp"
            android:layout_height="15dp"
            android:layout_gravity="right"
            android:layout_marginTop="3dp"
            android:layout_marginRight="51dp"
            android:textColor="#f15642"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_login_loginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:text="로그인"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:textSize="23sp"
            android:includeFontPadding="false"
            android:textColor="#191919" />


        <TextView
            android:layout_marginTop="47dp"
            android:id="@+id/txt_signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:text="회원가입"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:includeFontPadding="false"
            android:textSize="16sp"
            android:textColor="#000000" />


    </LinearLayout>


</RelativeLayout>