<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="224dp"
        android:background="@drawable/popup_select_1">

        <RelativeLayout
            android:layout_width="264dp"
            android:layout_height="224dp">

            <RelativeLayout
                android:id="@+id/edit_rl_1"
                android:layout_width="299dp"
                android:layout_height="118dp"
                android:layout_marginTop="38dp">


                <TextView
                    android:id="@+id/title_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="21dp"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:includeFontPadding="false"
                    android:text="새 카테고리 추가"
                    android:textColor="#191919"
                    android:textSize="15sp" />

                <com.computer.inu.readit_appjam.ClearEditText
                    android:id="@+id/category_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_new"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@null"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:hint="5글자 이내로 입력해주세요"
                    android:includeFontPadding="false"
                    android:textAlignment="center"
                    android:textColor="#191919"
                    android:textColorHint="#d8d8d8"
                    android:singleLine="true"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/category_edit_text"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:background="#4d000000" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_1"
                android:layout_width="299dp"
                android:layout_height="41dp"

                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/category_add_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:includeFontPadding="false"
                    android:paddingTop="9dp"
                    android:text="취소"
                    android:textAlignment="center"
                    android:textColor="#b5b5b5"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/category_add_ok"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:includeFontPadding="false"
                    android:paddingTop="9dp"
                    android:text="확인"
                    android:textAlignment="center"
                    android:textColor="@color/tomato"
                    android:textSize="15sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>


